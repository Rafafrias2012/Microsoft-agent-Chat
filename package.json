{
  "name": "msagent-chat",
  "workspaces": [
    "server",
    "webapp",
    "protocol",
    "msagent.js"
  ],
  "scripts": {
    "format": "prettier --write **/*.{ts,html,scss}",
    "build": "bun run build:all",
    "build:all": "for dir in server webapp protocol msagent.js; do (cd $dir && bun run build); done"
  },
  "packageManager": "bun@1.1.12",
  "devDependencies": {
    "prettier": "^3.3.3",
    "typescript": ">=3.0.0"
  }
}
