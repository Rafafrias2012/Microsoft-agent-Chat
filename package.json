{
  "name": "msagent-chat",
  "workspaces": [
    "server",
    "webapp", 
    "protocol", 
    "msagent.js"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,html,scss}\"",
    "build": "npm run build -w server -w webapp -w protocol -w msagent.js",
    "start": "ts-node src/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts"
  },
  "type": "module",
  "packageManager": "npm@10.x",
  "devDependencies": {
    "@types/node": "^20.14.2",
    "nodemon": "^3.1.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
